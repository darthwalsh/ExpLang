%header%

GRAMMARTYPE = "LL"

%tokens%

EQUALS = "="
PLUS = "+"
PIPE = "|"
COLON = ":"
DIGIT = <<[0-9]>>
VARIABLE = <<[a-z]>>
NEWLINE = <<\r?\n>>

%productions%

Facts = Equal [NEWLINE FactOrWhere] [NEWLINE];

FactOrWhere = PIPE Equal [NEWLINE FactOrWhere]
  | Equal [NEWLINE FactOrWhere];

Equal = Add EQUALS Add;

Add = Cons [PLUS Cons];

Cons = Char [COLON] Cons
  | Char;

Char = DIGIT
  | VARIABLE;